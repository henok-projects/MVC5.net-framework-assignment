@model ClassTime.Web.Models.UpcomingPassedEventsViewModel


<h1 class="event-group-heading">New Classes</h1>

<div class="row">
    @if (Model.UpcomingEvents.Any())
    {
        @Html.DisplayFor(x => x.UpcomingEvents)
       
    }
    else
    {
    <div class="col-md-4 col-sm-6 col-xs-12">No classes</div>
    }
    
</div>
<h1 class="event-group-heading">last classes</h1>

<div class="row">
    @if (Model.PassedEvents.Any())
    {
        @Html.DisplayFor(x => x.PassedEvents)
    }
    else
    {
        <div class="col-md-4 col-sm-6 col-xs-12">No classes</div>
    }
</div>

@section scripts {
    @Scripts.Render("~/bundles/ajax")
}
